<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.fangyi.launchmode.MainActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="1dp" />



    <Button
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动 Main Activity"
        android:id="@+id/btnMainAty"
        android:layout_marginBottom="67dp"
        android:layout_above="@+id/btnStartBAty"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_x="1dp"
        android:layout_y="60dp" />

    <Button
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start LocalAppAty"
        android:id="@+id/btnStartLocal"
        android:layout_above="@+id/btnStartMyAty"
        android:layout_centerHorizontal="true"
        android:layout_x="1dp"
        android:layout_y="100dp" />

    <Button
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动 BAty"
        android:id="@+id/btnStartBAty"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="1dp"
        android:layout_y="140dp" />

    <Button
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start MyAty"
        android:id="@+id/btnStartMyAty"
        android:layout_above="@+id/btnMainAty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="1dp"
        android:layout_y="180dp" />

    <Button
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LearnContext"
        android:id="@+id/btnStarLearnContext"
        android:layout_alignTop="@+id/btnStartLocal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="right|bottom"
        android:layout_x="1dp"
        android:layout_y="220dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送消息"
        android:id="@+id/btnSendMsg"
        android:layout_x="1dp"
        android:layout_y="260dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册接收器"
        android:id="@+id/btnReg"
        android:layout_x="1dp"
        android:layout_y="300dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注销接收器"
        android:id="@+id/btnUnReg"
        android:layout_x="1dp"
        android:layout_y="340dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动WebView"
        android:id="@+id/btnStartWebView"
        android:layout_x="1dp"
        android:layout_y="380dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动MyAty2"
        android:id="@+id/btnStartMyAty2"
        android:layout_x="1dp"
        android:layout_y="420dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvOut"
        android:layout_below="@+id/btnStartBAty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:layout_x="150dp"
        android:layout_y="70dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="默认信息"
        android:id="@+id/etData"
        android:layout_below="@+id/tvOut"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="right"
        android:layout_x="150dp"
        android:layout_y="90dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动服务"
        android:id="@+id/btnStartService"
        android:layout_below="@+id/etData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|bottom"
        android:layout_x="150dp"
        android:layout_y="140dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止服务"
        android:id="@+id/btnStopService"
        android:layout_below="@+id/btnStartService"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_x="150dp"
        android:layout_y="180dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定服务"
        android:id="@+id/btnBindService"
        android:layout_below="@+id/etData"
        android:layout_toRightOf="@+id/etData"
        android:layout_toEndOf="@+id/etData"
        android:layout_gravity="right|center_vertical"
        android:layout_x="250dp"
        android:layout_y="140dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解除绑定"
        android:id="@+id/btnUnBindService"
        android:layout_below="@+id/btnBindService"
        android:layout_toRightOf="@+id/etData"
        android:layout_toEndOf="@+id/etData"
        android:layout_gravity="left|center_vertical"
        android:layout_x="250dp"
        android:layout_y="180dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同步数据"
        android:id="@+id/btnSyncData"
        android:layout_below="@+id/btnStopService"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_x="150dp"
        android:layout_y="220dp" />



</AbsoluteLayout>
